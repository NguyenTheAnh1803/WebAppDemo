<h2>Đăng nhập</h2>
<form asp-action="Login" method="post">
    <label>Username</label>
    <input name="username" />
    <br />
    <label>Password</label>
    <input name="password" type="password" />
    <br />
    <button type="submit">Đăng nhập</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red;">@ViewBag.Error</p>
}
